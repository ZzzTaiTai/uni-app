.window .pop {
  position: fixed;
  visibility: hidden;
  top: 50%;
  left: 50%;
  width: 250px;
  margin-left: -125px;
  -webkit-transform: translateY(-30%);
          transform: translateY(-30%);
  opacity: .8;
  z-index: 99;
  font-size: 18px;
  text-align: center;
  background-color: #fff;
  border-radius: 8px;
  padding-bottom: 15px;
  -webkit-transition: all .2s;
  transition: all .2s;
}
.window .pop .title {
  height: 58px;
  line-height: 58px;
  font-size: 20px;
  color: #fff;
  border-top-right-radius: 8px;
  border-top-left-radius: 8px;
}
.window .pop .info {
  display: block;
  font-size: 14px;
  color: #434343;
  line-height: 22px;
  padding: 27px 20px 20px;
  text-align: left;
}
.window .pop .btn-close {
  width: 200px;
  height: 40px;
  line-height: 40px;
  border-radius: 6px;
  font-size: 16px;
  color: #fff;
  border: none;
}
.window .bg-cover {
  position: fixed;
  top: 0;
  bottom: 0;
  left: 0;
  right: 0;
  background-color: rgba(0, 0, 0, 0.43);
  z-index: 98;
  display: none;
  -webkit-backdrop-filter: blur(2px);
          backdrop-filter: blur(2px);
}
.window.show .pop {
  visibility: visible;
  opacity: 1;
  -webkit-transform: translateY(-50%);
          transform: translateY(-50%);
}
.window.show .bg-cover {
  display: block;
}

