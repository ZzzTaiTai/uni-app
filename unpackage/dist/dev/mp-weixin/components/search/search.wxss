.search-box {
  position: fixed;
  visibility: hidden;
  top: 0;
  left: 0;
  heigh: 0;
  width: 100vw;
  background-color: #fff;
  z-index: 9999;
}
.search-box.show {
  height: 100vh;
  visibility: visible;
}
.search-box .top {
  height: 45px;
  padding: 7px 0;
  position: relative;
  border-bottom: 1px solid #eee;
  box-sizing: border-box;
}
.search-box .top .input {
  position: relative;
  margin-right: 60px;
  margin-left: 13px;
}
.search-box .top .input .search-icon {
  position: absolute;
  height: 14px;
  width: 14px;
  top: 8px;
  left: 10px;
  background-size: 14px;
}
.search-box .top .input .search-input {
  width: 100%;
  height: 30px;
  padding: 5px 0 5px 32px;
  box-sizing: border-box;
  line-height: 24px;
  background: #f2f2f2;
  border-radius: 44px;
  font-size: 14px;
  color: #434343;
  -webkit-appearance: none;
  border-width: 0;
}
.search-box .cancel {
  float: right;
  font-size: 14px;
  color: #434343;
  width: 60px;
  line-height: 30px;
  text-align: center;
}
.search-box .his-hot-city {
  padding: 12px 13px 7px;
  position: absolute;
  top: 45px;
  bottom: 0;
  left: 0;
  right: 0;
  overflow: auto;
}
.search-box .title {
  font-size: 16px;
  color: #434343;
  height: 22px;
  line-height: 20px;
  margin: 10px 0;
}
.search-box .delete {
  display: block;
  float: right;
  background-size: 17px 17px;
  height: 17px;
  width: 17px;
  margin-top: 21px;
}
.search-box .city-lists::after {
  content: "";
  display: block;
  height: 0;
  clear: both;
}
.search-box .city-lists ._li {
  box-sizing: border-box;
  background: #f2f2f2;
  border-radius: 44px;
  padding: 0 16px;
  width: 32%;
  height: 32px;
  line-height: 32px;
  margin-bottom: 12px;
  font-size: 14px;
  color: #434343;
  text-align: center;
  float: left;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

